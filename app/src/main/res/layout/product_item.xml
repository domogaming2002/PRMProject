<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="3">

    <RelativeLayout
        android:layout_width="190dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/imageProductListRecycleView"
            android:layout_width="190dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/anh1" />

        <LinearLayout
            android:id="@+id/productInformationLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageProductListRecycleView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productNameProductListRecycleView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Câu chuyện về cô bé yêu bánh hanhj nhân đã sống Một nghìn năm"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            <RatingBar
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="80dp"
                android:layout_height="20dp"

                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#ffc301"
                android:rating="4.5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Đã bán"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productNumberSaleProductListRecycleView"
                    android:text=" 300"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/productOldPriceProductListRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="74.240 đ"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/productSalePriceProductListRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="74.240 đ"
                android:textSize="30sp"
                android:textStyle="bold" />


        </LinearLayout>

    </RelativeLayout>
</GridLayout>