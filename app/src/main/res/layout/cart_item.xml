<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkedItem"
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:checked="false" />

        <ImageView
            android:id="@+id/imageCartProduct"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="#5064D5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProductCartName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Chuyện Con Mèo Lập Kèo Cứu Sách"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/promotionPrice"
                    style="@style/MainPrice"
                    android:text="81.000 đ"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/oldPrice"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginStart="10dp"
                    android:text="119.000 đ"
                    style="@style/oldPrice"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btnMinus"
                    android:layout_width="20dp"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:background="@drawable/retangle_border"
                    android:text="-" />
                <TextView
                    android:id="@+id/tvCartProductQuantity"
                    android:layout_width="25dp"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/retangle_border"
                    android:text="1" />
                <TextView
                    android:id="@+id/btnPlus"
                    android:layout_width="20dp"
                    android:textAlignment="center"
                    android:layout_height="20dp"
                    android:background="@drawable/retangle_border"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

