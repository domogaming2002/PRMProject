<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewStyle">
        <item name="android:textColor">#86AD33</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="OriginalPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#717171</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="h3Text" parent="@style/textBase">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h4Text" parent="@style/textBase">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallerText" parent="@style/textBase">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MainPrice" parent="textBase">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="oldPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="layoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>